#include <stdio.h>

int main() {
    int i, j, n;
    char ch;

    printf("Enter the number of rows: ");
    scanf("%d", &n);

    // Pyramid using *
    for (i = 1; i <= n; i++) {
        for (j = i; j < n; j++)
            printf(" ");
        for (j = 1; j <= (2 * i - 1); j++)
            printf("*");
        printf("\n");
    }

    // Alphabet Pyramid
    for (i = 1; i <= n; i++) {
        for (j = i; j < n; j++)
            printf(" ");
        for (ch = 'A'; ch < 'A' + i; ch++)
            printf("%c", ch);
        for (ch = 'A' + i - 2; ch >= 'A'; ch--)
            printf("%c", ch);
        printf("\n");
    }

    return 0;
}
