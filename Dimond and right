#include <stdio.h>

int main() {
    int i, j, n;
    printf("Enter the number of rows: ");
    scanf("%d", &n);

    // 1. Right-Angle Triangle with Numbers
    printf("\nRight-Angle Triangle:\n");
    for (i = 1; i <= n; i++) {
        for (j = 1; j <= i; j++) {
            printf("%d", j);
        }
        printf("\n");
    }

    // 2. Diamond Shape with Numbers
    printf("\nDiamond Shape:\n");

    // Upper part of diamond
    for (i = 1; i <= n; i++) {
        for (j = i; j < n; j++)
            printf(" ");  // spaces before numbers
        for (j = 1; j <= i; j++)
            printf("%d ", j);
        printf("\n");
    }

    // Lower part of diamond
    for (i = n - 1; i >= 1; i--) {
        for (j = n; j > i; j--)
            printf(" ");
        for (j = 1; j <= i; j++)
            printf("%d ", j);
        printf("\n");
    }

    return 0;
}
